# Server Configuration
PORT=7000
NODE_ENV=production

# Public URL - IMPORTANT: Change this to your actual domain/URL
# Examples:
# - https://your-addon.herokuapp.com
# - https://addon.yourdomain.com
# - https://your-railway-app.up.railway.app
PUBLIC_URL=https://your-addon-url.com

# Optional: Sentry error tracking
# SENTRY_DSN=your_sentry_dsn_here

# Optional: Custom CORS origins (comma separated)
# CORS_ORIGINS=https://app.stremio.com,https://web.stremio.com

# Feature flags
DISABLE_PROXIES=true
ENABLE_CACHE=true
CACHE_DURATION_HOURS=720

# Optional: External proxy list (comma separated)
# PROXY_LIST=http://proxy1.com:8080,http://proxy2.com:8080

# Cleanup and storage limits
LOG_RETENTION_HOURS=48
LOG_MAX_SIZE_MB=500
TEMP_FILE_RETENTION_HOURS=48
TEMP_MAX_SIZE_MB=1000

# Scraping configuration
SCRAPING_DELAY_MS=1500  # Delay between requests to subs.ro (milliseconds)
USER_AGENT=Mozilla/5.0 (Compatible; StremioAddon/1.0; +https://github.com/your-repo)

# Streaming download (faster extraction)
ENABLE_STREAM_DOWNLOAD=true  # Use streaming download for lower latency